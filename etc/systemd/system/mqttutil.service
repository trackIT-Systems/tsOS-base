[Unit]
Description=Publish system information via MQTT
Requires=mosquitto.service
After=network-online.target mosquitto.service time-set.target hostname-config.service

[Service]
ExecStart=/usr/bin/python3 -m mqttutil -c /boot/firmware/mqttutil.conf -v --outpath=/data
Restart=always
RestartSec=10s
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
