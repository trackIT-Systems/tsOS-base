[Unit]
Description=tsOS Configuration Manager - BLE GATT Gateway
After=network.target bluetooth.target tsconfig.service
Wants=bluetooth.target tsconfig.service
Requires=tsconfig.service

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/tsconfig
ExecStart=python3 -m app.ble_gateway --api-url http://localhost:8000 -v
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

