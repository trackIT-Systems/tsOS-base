proc                    /proc               proc    defaults                                0 0
LABEL=bootfs            /boot/firmware      vfat    defaults,user,umask=000                 0 2
LABEL=rootfs            /                   ext4    defaults,noatime                        0 1
LABEL=datafs            /media/datafs       exfat   defaults,user,umask=000,nofail,x-systemd.device-timeout=5  0 2

# mounts for user-access
/boot/firmware          /media/boot         none    defaults,bind,x-mount.mkdir             0 0
/dev/sda1               /media/usb          auto    defaults,user,umask=000,nofail,x-systemd.device-timeout=5  0 2
